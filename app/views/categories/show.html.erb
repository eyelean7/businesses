<h1><%= @category.name %></h1>
<ul>
  <% @category.businesses.each do |business| %>
  <li><%= link_to business.name, category_business_path(@category, business) %></li>
  <% end %>
</ul>
<p><%= link_to "Add Business", new_category_business_path(@category) %></p>
<p><%= link_to "Return to Categories", categories_path %></p>
<p><%= link_to "Edit", edit_category_path(@category) %></p>
<p><%= link_to "Delete", category_path(@category), :data => {:confirm => "You sure?", :method => "delete"} %></p>
